<%= form_for @run, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :root_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :root_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :desription, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :desription, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                runs_path, :class => 'btn' %>
  </div>
<% end %>
