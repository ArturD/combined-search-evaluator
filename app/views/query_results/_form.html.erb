<%= form_for @query_result, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :query_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :query_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :page_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :page_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :result_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :result_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :position, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :position, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                query_results_path, :class => 'btn' %>
  </div>
<% end %>
