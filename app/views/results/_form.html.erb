<%= form_for @result, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :page_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :page_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phrase_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phrase_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :score, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :score, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comment, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :comment, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :who, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :who, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                results_path, :class => 'btn' %>
  </div>
<% end %>
