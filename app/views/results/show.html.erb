<%- model_class = Result -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:page_id) %>:</strong></dt>
  <dd><%= @result.page_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phrase_id) %>:</strong></dt>
  <dd><%= @result.phrase_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score) %>:</strong></dt>
  <dd><%= @result.score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @result.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:who) %>:</strong></dt>
  <dd><%= @result.who %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              results_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_result_path(@result), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              result_path(@result),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
