<%= form_for @query, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :run_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :run_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :response, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :response, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phrase_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phrase_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                queries_path, :class => 'btn' %>
  </div>
<% end %>
